<%- include("partials/header"); -%>


<h1>Compose</h1>
<form action="/compose" method="POST">
    
    <div class="form-group">
        <label for="composeTitle">Title</label>
        <input type="text" name="composeTitle" class="form-control" id="composeTitle">
    </div>  
    <div class="form-group">
        <label for="composePost">Post</label>
        <textarea name="composePost" id="composePost" class="form-control" rows="5"></textarea>
    </div>
    <button type="submit" name="submitBtn" class="btn btn-primary">Publish</button>
</form>


<%- include("partials/footer"); -%>